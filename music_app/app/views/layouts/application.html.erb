<!DOCTYPE html>
<html>
  <head>
    <title>NotSpotify</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <!-- Add awesome fonts -->
    <link href="//use.fontawesome.com/releases/v5.0.13/css/all.css" rel="stylesheet">

    <!-- Changes password element from text to password upon clicking to allow a default password -->
    <script type="text/javascript">
      function makeItPassword()
      {
         document.getElementById("passcontainer")
            .innerHTML = "<input id=\"new-user-password\" name=\"user[password]\" type=\"password\"/>";
         document.getElementById("password").focus();
      }
   </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
